# Synapse Configuration
# Copy this file to .env and adjust values as needed

# Neo4j Connection
SYNAPSE_NEO4J_URI=bolt://localhost:7687
SYNAPSE_NEO4J_USERNAME=neo4j
SYNAPSE_NEO4J_PASSWORD=your_password_here
SYNAPSE_NEO4J_DATABASE=neo4j

# Connection Pool
SYNAPSE_NEO4J_MAX_CONNECTION_LIFETIME=3600
SYNAPSE_NEO4J_MAX_CONNECTION_POOL_SIZE=50
SYNAPSE_NEO4J_CONNECTION_TIMEOUT=30

# ID Generation
SYNAPSE_ID_LENGTH=16

# Query Defaults
SYNAPSE_DEFAULT_PAGE_SIZE=100
SYNAPSE_DEFAULT_MAX_DEPTH=5

# Batch Write Settings
SYNAPSE_BATCH_WRITE_SIZE=1000

